// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "vim_mode": true,
  "cursor_blink": false,
  "chat_panel": {
    "button": "never"
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "collaboration_panel": {
    "button": false
  },
  "assistant": {
    "enabled": false,
    "version": "1",
    "button": false
  },
  "assistant_v2": {
    "enabled": false
  },
  "notification_panel": {
    "dock": "left",
    "button": false
  },
  "theme": "One Dark",
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
