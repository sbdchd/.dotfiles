// Place your settings in this file to overwrite the default settings
{
  "window.title": "${activeEditorLong}",
  "window.newWindowDimensions": "maximized",
  // "window.title": "${rootName}",
  // "window.titleBarStyle": "native",

  "workbench.iconTheme": "vs-minimal",
  "workbench.editor.showTabs": "single",
  "workbench.startupEditor": "none",

  "editor.lineNumbers": "relative",
  "editor.cursorBlinking": "solid",
  "editor.folding": false,
  "editor.minimap.enabled": false,
  // "workbench.tree.indent": 16,
  // "workbench.useExperimentalGridLayout": true,

  // "breadcrumbs.enabled": true,
  // "breadcrumbs.filePath": "on",

  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "workbench.statusBar.visible": true,
  "telemetry.enableTelemetry": false,
  "files.associations": {
    "*.star": "python",
    "*.sky": "python"
  },
  "search.useGlobalIgnoreFiles": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.autoindent": false,
  "explorer.confirmDragAndDrop": false,
  "editor.suggestSelection": "first",
  "files.insertFinalNewline": true,
  "editor.fontFamily": "Menlo",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // https://github.com/rust-lang/rls-vscode/issues/458
  "[rust]": {
    "editor.codeLens": true
  },
  "editor.fontSize": 13,
  "liveshare.featureSet": "insiders",
  "explorer.confirmDelete": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.autoFixOnSave": true,
  "eslint.lintTask.enable": true,
  "editor.detectIndentation": false,
  "emmet.showAbbreviationSuggestions": false,
  "eslint.alwaysShowStatus": true,
  "vim.enableNeovim": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "javascript.format.semicolons": "remove",
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDelete": false,
  "python.languageServer": "Pylance",
  "editor.guides.indentation": false,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "redhat.telemetry.enabled": true,
  "window.commandCenter": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "explorer.excludeGitIgnore": true,
  "evenBetterToml.schema.enabled": false,
  "editor.formatOnSave": true,
  "sass.format.enabled": false,
  "update.mode": "manual",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.py": "${capture}_test.py",
    "*.ts": "${capture}.test.ts",
    "*.tsx": "${capture}.test.tsx"
  },
  "prettier.ignorePath": "",
  "workbench.activityBar.location": "hidden",
  "search.useParentIgnoreFiles": true,
  "extensions.ignoreRecommendations": true,
  "debug.onTaskErrors": "debugAnyway",
  "zig.path": "/Users/steve/Library/Application Support/Code/User/globalStorage/ziglang.vscode-zig/zig_install/zig",
  "zig.zls.path": "/Users/steve/Library/Application Support/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
  "zig.initialSetupDone": true,
  "debug.allowBreakpointsEverywhere": true,
  "workbench.colorTheme": "Mariana Pro (Cool)"
}
