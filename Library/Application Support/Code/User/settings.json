// Place your settings in this file to overwrite the default settings
{
  "window.title": "${activeEditorLong}",
  // "window.title": "${rootName}",
  // "window.titleBarStyle": "native",

  "workbench.iconTheme": "vs-minimal",
  "workbench.editor.showTabs": "single",
  "workbench.startupEditor": "none",

  "editor.lineNumbers": "relative",
  "editor.cursorBlinking": "solid",
  "editor.folding": false,
  "editor.minimap.enabled": false,
  // "workbench.tree.indent": 16,
  // "workbench.useExperimentalGridLayout": true,

  // "breadcrumbs.enabled": true,
  // "breadcrumbs.filePath": "on",

  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "workbench.statusBar.visible": true,
  "telemetry.enableTelemetry": false,
  "files.associations": {
    "*.star": "python",
    "*.sky": "python"
  },
  "search.useGlobalIgnoreFiles": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "python.linting.mypyEnabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.autoindent": false,
  "explorer.confirmDragAndDrop": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "remotefs.remote": {
    "570": {
      "scheme": "sftp",
      "host": "localhost",
      "port": 2222,
      "username": "group6",
      "privateKeyPath": "/Users/steve/.ssh/id_rsa",
      "rootPath": "/home/group6"
    }
  },
  "files.insertFinalNewline": true,
  "editor.fontFamily": "Menlo",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // https://github.com/rust-lang/rls-vscode/issues/458
  "[rust]": {
    "editor.codeLens": false
  },
  "editor.fontSize": 13,
  "liveshare.featureSet": "insiders",
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
    {
      "name": "Auth0 Orange",
      "value": "#eb5424"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "C# Purple",
      "value": "#68217A"
    },
    {
      "name": "Gatsby Purple",
      "value": "#639"
    },
    {
      "name": "Go Cyan",
      "value": "#5dc9e2"
    },
    {
      "name": "Java Blue-Gray",
      "value": "#557c9b"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#00b3e6"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "explorer.confirmDelete": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.autoFixOnSave": true,
  "eslint.lintTask.enable": true,
  "editor.detectIndentation": false,
  "emmet.showAbbreviationSuggestions": false,
  "eslint.alwaysShowStatus": true,
  "vim.enableNeovim": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "javascript.format.semicolons": "remove",
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "python.jediEnabled": false,
  "rust.clippy_preference": "on",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDelete": false,
  "python.languageServer": "Pylance",
  "editor.guides.indentation": false,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "redhat.telemetry.enabled": true,
  "python.linting.mypyArgs": ["--show-column-numbers", "--no-pretty"],
  "window.commandCenter": true,
  "isort.args": ["--sp", "./backend/pyproject.toml"],
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "explorer.excludeGitIgnore": true,
  "evenBetterToml.schema.enabled": false,
  "languageServerExample.trace.server": "verbose",
  "editor.formatOnSave": true,
  "sass.format.enabled": false,
  "update.mode": "manual",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.py": "${capture}_test.py",
    "*.ts": "${capture}.test.ts",
    "*.tsx": "${capture}.test.tsx"
  },
  "prettier.ignorePath": "",
  "workbench.activityBar.location": "hidden",
  "search.useParentIgnoreFiles": true,
  "extensions.ignoreRecommendations": true
}
