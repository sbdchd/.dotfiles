// Place your settings in this file to overwrite the default settings
{
  "window.title": "${activeEditorLong}",
  "window.newWindowDimensions": "maximized",

  "workbench.iconTheme": "vs-minimal",
  "workbench.editor.showTabs": "single",
  "workbench.startupEditor": "none",

  "editor.lineNumbers": "relative",
  "editor.cursorBlinking": "solid",
  "editor.folding": false,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "workbench.statusBar.visible": true,
  "files.associations": {
    "*.star": "python",
    "*.sky": "python",
    "*.snap": "insta-snapshots"
  },
  "search.useGlobalIgnoreFiles": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.autoindent": false,
  "explorer.confirmDragAndDrop": false,
  "editor.suggestSelection": "first",
  "files.insertFinalNewline": true,
  "editor.fontFamily": "SFMono-Regular,Menlo",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontSize": 13,
  "liveshare.featureSet": "insiders",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.lintTask.enable": true,
  "editor.detectIndentation": false,
  "vim.enableNeovim": true,
  "javascript.format.semicolons": "remove",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDelete": false,
  "python.languageServer": "Pylance",
  "editor.guides.indentation": false,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "redhat.telemetry.enabled": true,
  "window.commandCenter": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "explorer.excludeGitIgnore": true,
  "evenBetterToml.schema.enabled": false,
  "editor.formatOnSave": true,
  "sass.format.enabled": false,
  "update.mode": "manual",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.py": "${capture}_test.py",
    "*.ts": "${capture}.test.ts",
    "*.tsx": "${capture}.test.tsx"
  },
  "prettier.ignorePath": "",
  "workbench.activityBar.location": "hidden",
  "search.useParentIgnoreFiles": true,
  "extensions.ignoreRecommendations": true,
  "debug.onTaskErrors": "debugAnyway",
  "zig.path": "/Users/steve/Library/Application Support/Code/User/globalStorage/ziglang.vscode-zig/zig_install/zig",
  "zig.zls.path": "/Users/steve/Library/Application Support/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
  "debug.allowBreakpointsEverywhere": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "editor.renderWhitespace": "all",
  "git.openRepositoryInParentFolders": "never",
  "chat.commandCenter.enabled": false,
  "workbench.colorCustomizations": {
    "terminal.background": "#343D46",
    "terminal.selectionBackground": "#d0f4ff30",
    "terminal.foreground": "#ffffffdd",
    "terminal.ansiBlack": "#343D46",
    "panel.background": "#23292e"
  },
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.fontSize": 13,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "markup.underline",
        "settings": {
          "fontStyle": "underline"
        }
      }
    ]
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "variable": "#FFFFFFDD",
      "parameter": "#FFFFFFDD",
      "enumMember": "#C594C5",
      "keyword": "#C594C5",
      "selfKeyword": { "fontStyle": "italic" },
      "decorator": "#5fb3b3",
      "builtinAttribute": "#5fb3b3",
      "macro": { "fontStyle": "italic" },
      "lifetime": "#FA8763",
      "function": { "foreground": "#5fb3b3", "fontStyle": "" }
    }
  },
  "workbench.colorTheme": "Mariana Pro (Cool)"
}
